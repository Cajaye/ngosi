// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Preso {
  id String @id
  eventName String
  eventLocation String?
  title String
  url String
  shortCode String @unique
  userId String
  surveys Survey[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

model Survey {
  id String @id
  presoId String
  preso Preso @relation(fields: [presoId], references: [id])
  fullName String
  email String @unique
  notifyWhenVideoPublished Boolean
  sendPresoFeedback Boolean
  notifyOfOtherTalks Boolean
  createdAt  DateTime @default(now())
}

model profiles {
  id String @id
  updated_at String?
  username String
  avatar_url String?
}
