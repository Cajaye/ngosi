// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Preso {
  id String @id
  eventName String
  eventLocation String
  title String
  url String
  shortCode String @unique
  presenterId String
  presenter Presenter @relation(fields: [presenterId], references: [id] )
  surveys Survey[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

model Presenter {
  id String @id
  firstName String
  lastName String
  email String @unique
  profileImage String?
  presos Preso[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

model Attendee {
  id String @id
  fullName String
  email String @unique
  surveys Survey[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
}

model Survey {
  id String @id
  presoId String
  preso Preso @relation(fields: [presoId], references: [id])
  attendeeId String
  attendee Attendee @relation(fields: [attendeeId], references: [id])
  notifyWhenVideoPublished Boolean
  sendPresoFeedback Boolean
  notifyOfOtherTalks Boolean
  createdAt  DateTime @default(now())
}

